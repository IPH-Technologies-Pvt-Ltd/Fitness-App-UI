<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="125dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="59dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/man" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="20dp"
                    android:text="Good Morning!"
                    android:textColor="@android:color/black"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="22dp"
                    android:textColor="@color/teal_700"
                    android:text="saurabh"
                    android:textSize="20dp" />

            </RelativeLayout>

            <!-- CardView positioned below the RelativeLayout containing TextViews -->
            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="400dp"
                android:layout_height="131dp"
                android:layout_below="@id/layout1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="400dp"
                    android:layout_height="131dp"
                    app:cardCornerRadius="8dp"
                    android:background="@drawable/reactangle_shap">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/sa"
                        >

                        <TextView
                            android:id="@+id/textview4"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="22dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="17dp"
                            android:text="Set Your Workout Plan"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/viewPager"
                            android:layout_width="149dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="220dp"
                            android:layout_marginTop="20dp" />

                        <!-- TextView5 inside the CardView -->

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="22dp"
                            android:layout_marginBottom="13dp"
                            android:text="@string/training_nutrition"
                            android:textSize="20sp" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout2"
                android:layout_marginTop="40dp"
                android:layout_marginStart="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your habits"
                    android:textStyle="bold"
                    android:textSize="20dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="173dp"
                android:layout_height="310dp"
                android:layout_below="@id/layout3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/dailyReportCardView"
                    android:layout_width="173dp"
                    android:layout_height="140dp"
                    android:background="@drawable/reactangle_shap"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/sa"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:text="Daily Report"
                            android:textSize="18dp">

                        </TextView>

                        <ImageView
                            android:id="@+id/imgview"
                            android:layout_width="49dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="115dp"
                            android:layout_marginTop="65dp"
                            android:src="@drawable/next">

                        </ImageView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="173dp"
                    android:layout_height="180dp"
                    android:layout_below="@id/imgview"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/reactangle_shap">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/hex"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="82dp"
                            android:layout_height="59dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/wor"
                            android:textSize="30sp">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="45dp"
                            android:text="Workout"
                            android:textSize="18dp">

                        </TextView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="40 Minutes"
                            android:textSize="10dp">

                        </TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout5"
                android:layout_width="173dp"
                android:layout_height="360dp"
                android:layout_below="@id/layout3"
                android:layout_toRightOf="@+id/layout4"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_marginRight="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:cardBackgroundColor="@color/sau"
                    app:cardCornerRadius="8dp"
                    android:background="@drawable/reactangle_shap">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgview1"
                            android:layout_width="61dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/run">

                        </ImageView>

                        <TextView
                            android:id="@+id/runn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="60dp"
                            android:text="Running"
                            android:textSize="18dp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="8500 steps"
                            android:textSize="10dp">

                        </TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="173dp"
                    android:layout_height="140dp"
                    app:cardBackgroundColor="@color/hex"
                    android:layout_below="@id/imgview1"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/reactangle_shap">

                    <LinearLayout
                        android:layout_width="173dp"
                        android:layout_height="140dp"
                        android:background="@color/s"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="61dp"
                            android:layout_height="50dp"
                            android:src="@drawable/nu"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp">

                        </ImageView>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nutrition"
                            android:layout_marginTop="40dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="18dp">

                        </TextView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bnv"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shap"
                app:itemTextColor="@android:color/black"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/menu"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:foregroundTint="@color/black"/>
        </RelativeLayout>
    </ScrollView>

