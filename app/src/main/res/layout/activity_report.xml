<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:context="ReportActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="@color/white">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/aa" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="27dp"
                android:text="Report"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="-27dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="386dp"
                android:layout_height="92dp"
                android:layout_marginTop="150dp"
                android:clipToPadding="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="386dp"
            android:layout_height="103dp"
            android:layout_below="@id/layout1"
            android:layout_marginStart="25dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="25dp"
            android:background="@color/sa"
            android:foreground="@drawable/sam">


            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/circularProgressBar"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="31dp"
                android:indeterminate="false"
                android:progress="70"
                android:backgroundTint="@color/sa"/>

            <TextView
                android:id="@+id/progressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="38dp"
                android:gravity="center"
                android:text=""
                android:textStyle="bold"
                android:textSize="13sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="113dp"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@id/circularProgressBar"
                android:backgroundTint="@color/sa">


                <TextView
                    android:id="@+id/planing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="3dp"
                    android:text="Great!"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/plan"
                    android:layout_width="195dp"
                    android:layout_height="53dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="5dp"
                    android:text="Today's plan is more than half done, keep her steady!"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/cup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/text"
                android:backgroundTint="@color/sa">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/cup" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="350dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/sau">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="101dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/sau"
                android:foreground="@drawable/sam">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/han" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img1"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:text="12"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text1"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="Exercises" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="101dp"
                android:layout_height="120dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/card1"
                android:foreground="@drawable/sam"
                app:cardBackgroundColor="@color/hex">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:src="@drawable/f" />

                <TextView
                    android:id="@+id/vie2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="60dp"
                    android:text="809"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:id="@+id/vie1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="Calories">

                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/card2"
                android:foreground="@drawable/sam"
                app:cardBackgroundColor="@color/s">


            <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/w" />

                <TextView
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="60dp"
                    android:text="42"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:id="@+id/vie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="Minutes">

                </TextView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li2"
            android:layout_width="341dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="525dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="20dp"
                android:text="Activity"
                android:textSize="23sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="110dp"
                android:layout_marginLeft="80dp"
                android:background="@android:drawable/btn_dropdown"
                android:backgroundTint="@color/white"
                android:entries="@array/activity_items" />

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/layout_line_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="600dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="15dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>